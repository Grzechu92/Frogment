<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/simple_implementation"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple implementation" />

    <Button
        android:id="@+id/fragment_switching_from_activity"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fragment switching from activity" />

    <Button
        android:id="@+id/fragment_switching_from_fragment"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fragment switching from fragment" />

    <Button
        android:id="@+id/defining_initial_fragment"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Defining initial fragment" />

    <Button
        android:id="@+id/defining_initial_fragment_with_state"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Defining initial fragment with state" />

    <Button
        android:id="@+id/keeping_fragment_state"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keeping fragment state" />

    <Button
        android:id="@+id/activity_state"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity state" />

    <Button
        android:id="@+id/activity_state_provider"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity state provider" />
</LinearLayout>
